    "@nestjs/testing": "11.1.6",
    "@swc/cli": "0.7.8",
    "@swc/core": "1.13.3",
    "@types/bcrypt": "6.0.0",
    "@types/cookie-parser": "1.4.9",
    "@types/ms": "2.1.0",
    "@types/passport-google-oauth20": "2.0.16",
    "@types/passport-jwt": "4.0.1",
    "@types/passport-microsoft": "2.1.0",
    "@vitest/coverage-v8": "3.2.4",
