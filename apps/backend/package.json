    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@prisma/client": "6.14.0",
    "bcrypt": "^6.0.0",
    "cache-manager": "^7.1.1",
    "class-transformer": "^0.5.1",
