{
  "name": "backend",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "preview": "nest start",
