{
  "name": "foggit",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "build": "pnpm -r build",
    "build:apps": "pnpm --filter \"./apps/**\" build",
    "build:packages": "pnpm --filter \"./packages/**\" build",
    "db:generate": "pnpm --filter backend exec prisma generate",
    "dev": "pnpm --filter \"./apps/**\" dev",
    "dev:prepare": "pnpm build:packages",
    "lint": "pnpm lint:root && pnpm -r lint",
    "lint:fix": "pnpm lint:root:fix && pnpm -r lint:fix",
    "lint:root": "eslint . --cache",
    "lint:root:fix": "pnpm lint:root --fix",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:e2e": "pnpm -r test:e2e",
    "test:cov": "pnpm -r test:cov",
    "typecheck": "pnpm -r typecheck",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "5.2.1",
    "eslint": "9.34.0",
    "installed-check": "9.3.0",
    "lint-staged": "16.1.5",
    "sherif": "1.6.1",
    "simple-git-hooks": "2.13.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --cache --fix"
  }
}
